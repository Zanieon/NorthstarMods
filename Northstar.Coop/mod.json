				"After": "InitCoopFuncs"
			},
			"ServerCallback": {
				"After": "InitCoopFuncs"
			}
		},
		{
			"Path": "sh_coop_custom_precache.gnut",
			"RunOn": "( CLIENT || SERVER ) && SP",
			"ClientCallback": {
				"After": "CoopCustomPrecache"
			},
			"ServerCallback": {
				"After": "CoopCustomPrecache"

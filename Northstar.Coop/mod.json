{
	"Name": "Northstar.Coop",
	"Description": "[WIP] Allows the singleplayer campaign to be played in cooperative",
	"Version": "0.0.1",
	"RequiredOnClient": true,
	"LoadPriority": 10,

	"ConVars": [
		{
			"Name": "coop_enemyTitanHealthScale",
			"DefaultValue": "2"
		},
		{
			"Name": "coop_preferredtitan",
			"DefaultValue": "none",
			"Flags": "ARCHIVE_PLAYERPROFILE"

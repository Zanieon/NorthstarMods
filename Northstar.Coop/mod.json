		{
			"Name": "autosprint_type",
			"DefaultValue": "1"
		},
		{
			"Name": "joy_movement_stick",
			"DefaultValue": ""
		},
		{
			"Name": "hud_setting_showTips",
			"DefaultValue": ""
		}
	],
	"Scripts": [
		{
			"Path": "sh_sp_coop.gnut",
			"RunOn": "SP"
		},
		{
			"Path": "sh_sp_coop_lobby.gnut",
